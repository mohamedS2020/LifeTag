{
  "expo": {
    "name": "LifeTag",
    "slug": "LifeTag",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "LifeTag needs camera access to scan QR codes for emergency medical information.",
        "NSPhotoLibraryUsageDescription": "LifeTag needs access to your photo library to save QR codes.",
        "NSPhotoLibraryAddUsageDescription": "LifeTag needs permission to save QR codes to your photo library."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_MEDIA_LOCATION"
      ],
      "package": "com.egbaki.LifeTag"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-camera",
      [
        "expo-media-library",
        {
          "photosPermission": "Allow LifeTag to save QR codes to your photo library.",
          "savePhotosPermission": "Allow LifeTag to save QR codes to your photo library.",
          "isAccessMediaLocationEnabled": true
        }
      ]
    ]
  }
}
